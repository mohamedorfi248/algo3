PROCEDURE insertion_sort(VAR arr: ARRAY_OF INTEGER;)
VAR
    i,j,app: INTEGER;
BEGIN
    FOR i FROM 0 TO arr.length-1  DO
        app :=arr [i];
        j:=i-1;
        WHILE (j>0  and arr[j]>app) DO
            arr[j+1] :=arr[j];
            j:=j-1;
        END_WHILE
        arr[j+1]= app
    END_FOR
END